{
  "configuration": {
    "status": "error",
    "name": "vkgl_project",
    "packages": "org.molgenis.vkgl",
    "ThresholdFilter": {
      "level": "debug"
    },
    "appenders": {
      "Console": {
        "name": "STDOUT",
        "PatternLayout": {
          "pattern": "%d [%t] %-5p %c{1} - %m%n"
        }
      },
      "File": {
        "name": "log_files",
        "ThresholdFilter": {
          "level": "info"
        },
        "Append": "false",
        "fileName": "${main:inputDirectory:-logs/errors.txt}/logs/variant_errors.txt",
        "PatternLayout": {
          "pattern": "%m%n"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "debug",
        "AppenderRef": [{
          "ref": "STDOUT"
        }, {
          "ref": "log_files"
        }]
      }
    }
  }
}
